---
// Componente Typography para consistencia tipogr√°fica
// Single Responsibility: Manejar estilos de texto
// Open/Closed: Extensible mediante variantes

export interface Props {
  as?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'p' | 'span' | 'time';
  variant?: 'title' | 'subtitle' | 'heading' | 'subheading' | 'body' | 'caption' | 'label';
  class?: string;
}

const {
  as: Element = 'p',
  variant = 'body',
  class: className = ''
} = Astro.props;

const variants = {
  title: 'text-4xl md:text-6xl font-bold text-white tracking-tight',
  subtitle: 'text-2xl md:text-3xl font-bold text-white uppercase tracking-wide',
  heading: 'text-2xl font-bold text-white uppercase tracking-wide',
  subheading: 'text-lg font-semibold text-neutral-200',
  body: 'text-neutral-300 leading-relaxed',
  caption: 'text-sm text-neutral-400',
  label: 'text-xs text-neutral-400 uppercase tracking-wide font-medium'
};

const classes = `${variants[variant]} ${className}`;
---

<Element class={classes}>
  <slot />
</Element>