---
import Layout from '../layouts/Layout.astro';
import { getBlogPosts } from '../lib/blog';

const recentPosts = await getBlogPosts();
const featuredPost = recentPosts[0];
const secondaryPosts = recentPosts.slice(1, 3);
---

<Layout title="Inicio - Muga OS" description="Bienvenido a Muga OS">
  <!-- Hero Section -->
  <section class="px-6 py-20">
    <div class="text-center">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
        MUGA OS
      </h1>
      <p class="text-lg text-neutral-300 max-w-2xl mx-auto mb-8 leading-relaxed">
        Un espacio donde compartimos pensamientos, proyectos y experiencias.
        Todo conectado directamente desde nuestro sistema y procesos.
      </p>
      <a 
        href="/blog" 
        class="inline-block bg-white text-black px-8 py-3 hover:bg-neutral-200 transition-colors font-medium text-sm uppercase tracking-wide"
      >
        Ver Blog
      </a>
    </div>
  </section>

  <!-- Featured Post -->
  {featuredPost ? (
    <section class="px-6 py-16">
      <div class="max-w-4xl mx-auto">
        <article class="bg-neutral-900/50 border border-neutral-800 overflow-hidden hover:bg-neutral-900/70 transition-colors">
          <div class="md:flex">
            <div class="md:w-1/2 p-8">
              <div class="flex items-center gap-2 mb-4">
                <span class="bg-white text-black px-3 py-1 text-xs font-bold uppercase tracking-wide">
                  Última Publicación
                </span>
                {featuredPost.data.area && (
                  <span class="bg-neutral-800 text-neutral-300 px-3 py-1 text-xs uppercase tracking-wide">
                    {featuredPost.data.area}
                  </span>
                )}
              </div>
              <h2 class="text-3xl md:text-4xl font-bold text-white mb-4 leading-tight">
                <a href={`/blog/${featuredPost.slug}`} class="hover:text-neutral-300 transition-colors">
                  {featuredPost.data.title}
                </a>
              </h2>
              <div class="flex flex-wrap items-center gap-4 text-sm mb-6">
                {featuredPost.data.date && !isNaN(featuredPost.data.date.getTime()) && (
                  <time class="text-neutral-400 uppercase tracking-wide text-xs">
                    {featuredPost.data.date.toLocaleDateString('es-ES', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                )}
                {featuredPost.data.tags.length > 0 && (
                  <div class="flex gap-2">
                    {featuredPost.data.tags.slice(0, 3).map((tag) => (
                      <span class="bg-neutral-800 text-neutral-300 px-2 py-1 text-xs uppercase tracking-wide">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
              <a
                href={`/blog/${featuredPost.slug}`}
                class="inline-flex items-center bg-white text-black px-6 py-3 hover:bg-neutral-200 transition-colors font-medium text-sm uppercase tracking-wide"
              >
                Leer Publicación Completa →
              </a>
            </div>
            <div class="md:w-1/2 bg-neutral-800/30 flex items-center justify-center p-8">
              <div class="text-center">
                <svg class="w-16 h-16 text-neutral-500 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                <p class="text-neutral-500 text-xs uppercase tracking-wide">Imagen Destacada</p>
              </div>
            </div>
          </div>
        </article>
      </div>
    </section>
  ) : null}

  <!-- Secondary Posts -->
  {secondaryPosts && secondaryPosts.length > 0 ? (
    <section class="px-6 py-16 bg-neutral-950/50">
      <div class="max-w-6xl mx-auto">
        <h2 class="text-2xl font-bold text-white mb-8 uppercase tracking-wide text-center">Más Publicaciones</h2>
        <div class="grid md:grid-cols-2 gap-6">
          {secondaryPosts.map((post) => (
            <article class="bg-neutral-900/40 border border-neutral-800/50 p-6 hover:bg-neutral-900/60 transition-colors">
              <div class="flex items-start justify-between mb-4">
                <div class="flex items-center gap-2">
                  {post.data.area && (
                    <span class="bg-neutral-800 text-neutral-300 px-2 py-1 text-xs uppercase tracking-wide">
                      {post.data.area}
                    </span>
                  )}
                  {post.data.category && post.data.category.length > 0 && (
                    <span class="bg-neutral-700 text-neutral-400 px-2 py-1 text-xs uppercase tracking-wide">
                      {post.data.category[0]}
                    </span>
                  )}
                </div>
                {post.data.date && !isNaN(post.data.date.getTime()) && (
                  <time class="text-neutral-500 uppercase tracking-wide text-xs">
                    {post.data.date.toLocaleDateString('es-ES', {
                      month: 'short',
                      day: 'numeric'
                    })}
                  </time>
                )}
              </div>
              <h3 class="text-xl font-semibold text-white mb-3">
                <a href={`/blog/${post.slug}`} class="hover:text-neutral-300 transition-colors">
                  {post.data.title}
                </a>
              </h3>
              {post.data.tags.length > 0 && (
                <div class="flex gap-2 mb-4">
                  {post.data.tags.slice(0, 2).map((tag) => (
                    <span class="bg-neutral-800/50 text-neutral-400 px-2 py-1 text-xs uppercase tracking-wide">
                      {tag}
                    </span>
                  ))}
                </div>
              )}
              <a
                href={`/blog/${post.slug}`}
                class="inline-flex items-center text-neutral-300 hover:text-white font-medium text-sm uppercase tracking-wide"
              >
                Leer →
              </a>
            </article>
          ))}
        </div>
        <div class="text-center mt-12">
          <a
            href="/blog"
            class="inline-block bg-neutral-800 text-white px-8 py-3 hover:bg-neutral-700 transition-colors font-medium text-sm uppercase tracking-wide border border-neutral-700"
          >
            Ver todas las publicaciones →
          </a>
        </div>
      </div>
    </section>
  ) : null}

  <!-- No Posts Message -->
  {(!featuredPost && (!secondaryPosts || secondaryPosts.length === 0)) ? (
    <section class="px-6 py-16">
      <div class="text-center">
        <div class="diagonal-stripes bg-neutral-900/40 p-12 border border-neutral-800/60 max-w-2xl mx-auto">
          <h2 class="text-xl font-semibold text-neutral-300 mb-2 uppercase tracking-wide">
            Sin Publicaciones
          </h2>
          <p class="text-neutral-500 text-sm">
            Las publicaciones aparecerán aquí cuando las agregues a la carpeta src/content/blog/.
          </p>
        </div>
      </div>
    </section>
  ) : null}
</Layout>

<style>
  .diagonal-stripes {
    background-image: repeating-linear-gradient(
      -45deg,
      transparent,
      transparent 1px,
      rgba(115, 115, 115, 0.1) 3px,
      rgba(115, 115, 115, 0.1) 10px
    );
  }
</style>
</Layout>
