---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
---

<Layout title="Proyectos - Muga OS" description="Todos mis proyectos de desarrollo y diseño">
  <!-- Header -->
  <section class="px-6 py-20">
    <div class="text-center">
      <h1 class="text-3xl md:text-4xl font-bold text-white mb-6 uppercase tracking-wide">
        Proyectos
      </h1>
      <p class="text-lg text-neutral-300 max-w-2xl mx-auto leading-relaxed">
        Mis proyectos activos en desarrollo web y diseño.
      </p>
    </div>
  </section>

  <!-- Projects -->
  <section class="px-6 py-16">
    <div class="space-y-8">
      {projects.map((project) => (
        <article class="p-6 hover:bg-neutral-900 transition-colors">
          <div class="flex flex-col md:flex-row md:items-start md:justify-between gap-4">
            <div class="flex-1">
              <h2 class="text-xl font-semibold text-white mb-3">
                {project.data.name}
              </h2>

              <div class="flex flex-wrap items-center gap-4 text-sm mb-4">
                <span class="bg-neutral-800 text-neutral-300 px-2 py-1 text-xs uppercase tracking-wide">
                  {project.data.area}
                </span>
                <span class="bg-neutral-800 text-neutral-300 px-2 py-1 text-xs uppercase tracking-wide">
                  {project.data.status}
                </span>
                {project.data.technologies.map((tech) => (
                  <span class="bg-neutral-800 text-neutral-300 px-2 py-1 text-xs uppercase tracking-wide">
                    {tech}
                  </span>
                ))}
              </div>

              {project.data.objective && (
                <p class="text-neutral-300 mb-4 leading-relaxed">
                  {project.data.objective}
                </p>
              )}
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>
</Layout>

<style>
  .diagonal-stripes {
    background-image: repeating-linear-gradient(
      -45deg,
      transparent,
      transparent 1px,
      rgba(115, 115, 115, 0.1) 3px,
      rgba(115, 115, 115, 0.1) 10px
    );
  }
</style>