---
import Layout from '../../layouts/Layout.astro';
import { getBlogPosts } from '../../lib/blog';

export async function getStaticPaths() {
  const posts = await getBlogPosts();
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
---

<Layout title={`${post.data.title} - Blog`}>
  <article class="max-w-4xl mx-auto">
    <!-- Header del post - Estilo periódico -->
    <header class="px-6 py-12 border-b border-neutral-800/50">
      <div class="mb-6">
        <a
          href="/blog"
          class="inline-flex items-center text-neutral-400 hover:text-white text-sm font-medium uppercase tracking-wide mb-4"
        >
          ← Volver al blog
        </a>
      </div>

      <!-- Badges de categoría y área -->
      <div class="flex items-center gap-3 mb-6">
        {post.data.area && (
          <span class="bg-neutral-800 text-neutral-300 px-4 py-2 text-sm uppercase tracking-wide font-medium border border-neutral-700">
            {post.data.area}
          </span>
        )}
        {post.data.category && post.data.category.length > 0 && (
          <span class="bg-neutral-700 text-neutral-400 px-4 py-2 text-sm uppercase tracking-wide border border-neutral-600">
            {post.data.category[0]}
          </span>
        )}
        {post.data.status && post.data.status !== 'Publicado' && (
          <span class="bg-neutral-600 text-neutral-500 px-4 py-2 text-sm uppercase tracking-wide">
            {post.data.status}
          </span>
        )}
      </div>

      <!-- Título principal - Estilo headline -->
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 leading-tight uppercase tracking-wide">
        {post.data.title}
      </h1>

      <!-- Tags sutiles debajo del título -->
      {post.data.tags.length > 0 && (
        <div class="flex gap-2 mb-8">
          {post.data.tags.slice(0, 5).map((tag) => (
            <span class="text-neutral-500 text-xs uppercase tracking-wide">#{tag}</span>
          ))}
        </div>
      )}

      <!-- Fecha minimalista -->
      {post.data.date && !isNaN(post.data.date.getTime()) && (
        <div class="text-neutral-400 text-xs uppercase tracking-wide mb-6">
          {post.data.date.toLocaleDateString('es-ES', {
            day: 'numeric',
            month: 'long',
            year: 'numeric'
          })}
        </div>
      )}
    </header>

    <!-- Contenido del artículo - Minimalista -->
    <div class="px-6 py-16">
      <div class="max-w-3xl mx-auto">
        <div class="article-content prose prose-lg max-w-none">
          <div set:html={post.body}></div>
        </div>
      </div>
    </div>

    <!-- Navegación -->
    <footer class="px-6 py-12 border-t border-neutral-800/50">
      <div class="text-center">
        <a
          href="/blog"
          class="inline-block bg-white text-black px-8 py-3 hover:bg-neutral-200 transition-colors font-medium text-sm uppercase tracking-wide"
        >
          Ver más artículos
        </a>
      </div>
    </footer>
  </article>
</Layout>

<style>
  .article-content {
    @apply text-neutral-300 leading-relaxed;
  }

  .article-content h2 {
    @apply text-2xl font-bold text-white mt-12 mb-6 uppercase tracking-wide;
  }

  .article-content h3 {
    @apply text-lg font-semibold text-neutral-200 mt-8 mb-4;
  }

  .article-content p {
    @apply mb-4 text-lg;
  }

  .article-content img {
    @apply w-full my-6 border border-neutral-700;
  }
</style>